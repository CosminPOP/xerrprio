<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <Script file="xerrprio.lua"/>

    <GameTooltip name="XerrPrioTooltipFrame" frameStrata="TOOLTIP" hidden="true" parent="UIParent"
                 inherits="GameTooltipTemplate"/>

    <Frame name="XerrPrioBarTickTemplate" virtual="true" alpha="1">
        <Size>
            <AbsDimension x="2" y="24"/>
        </Size>
        <Layers>
            <Layer level="BORDER">
                <Texture file="Interface\Addons\xerrprio\Melli" name="$parentTick">
                    <Size x="1" y="24"/>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame>

    <Frame name="XerrPrioBarFrameTemplate" virtual="true" alpha="0.9">
        <Size>
            <AbsDimension x="280" y="24"/>
        </Size>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture file="Interface\DialogFrame\UI-DialogBox-Background" name="$parentBackground">
                    <Size x="280" y="24"/>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <Texture file="Interface\Addons\xerrprio\Melli" name="$parentBar">
                    <Size x="260" y="24"/>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture file="Interface\Addons\xerrprio\Melli" name="$parentRefreshBar">
                    <Size x="260" y="24"/>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <Texture file="Interface\CastingBar\UI-CastingBar-Spark" name="$parentRefreshSpark"
                         alphaMode="ADD">
                    <Size x="16" y="32"/>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset>
                                <AbsDimension x="252" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <Texture name="$parentIcon">
                    <Size x="24" y="24"/>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset>
                                <AbsDimension x="-24" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <Texture file="Interface\CastingBar\UI-CastingBar-Spark" name="$parentSpark" alphaMode="ADD">
                    <Size x="16" y="32"/>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset>
                                <AbsDimension x="252" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Frame name="$parentTexts" frameStrata="HIGH">
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="0" y="0"/>
                        </Offset>
                    </Anchor>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset>
                            <AbsDimension x="0" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentRefresh" inherits="GameFontNormal" justifyH="LEFT" text="Longertext">
                            <Anchors>
                                <Anchor point="LEFT">
                                    <Offset>
                                        <AbsDimension x="10" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                            <Size>
                                <AbsDimension x="140" y="30"/>
                            </Size>
                        </FontString>
                        <FontString name="$parentToF" inherits="GameFontNormal" justifyH="LEFT" text="ToF">
                            <Anchors>
                                <Anchor point="LEFT">
                                    <Offset>
                                        <AbsDimension x="95" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                            <Size>
                                <AbsDimension x="30" y="30"/>
                            </Size>
                        </FontString>
                        <FontString name="$parentUVLS" inherits="GameFontNormal" justifyH="LEFT" text="UVLS">
                            <Anchors>
                                <Anchor point="LEFT">
                                    <Offset>
                                        <AbsDimension x="125" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                            <Size>
                                <AbsDimension x="30" y="30"/>
                            </Size>
                        </FontString>
                        <FontString name="$parentName" inherits="GameFontNormal" justifyH="RIGHT" text="Spell Name">
                            <Anchors>
                                <Anchor point="RIGHT">
                                    <Offset>
                                        <AbsDimension x="-30" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                            <Size>
                                <AbsDimension x="120" y="30"/>
                            </Size>
                        </FontString>
                        <FontString name="$parentTimeLeft" inherits="GameFontNormal" justifyH="RIGHT" text="25">
                            <Anchors>
                                <Anchor point="RIGHT">
                                    <Offset>
                                        <AbsDimension x="-3" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                            <Size>
                                <AbsDimension x="50" y="24"/>
                            </Size>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
    </Frame>

    <Frame name="XerrPrioBars" toplevel="true" parent="UIParent" movable="true"
           enableMouse="true">
        <Size>
            <AbsDimension x="280" y="80"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Layers>
        </Layers>
        <Frames>
        </Frames>
        <Scripts>
            <OnLoad>
                self:RegisterForDrag("LeftButton");
                self:SetMovable(1);
                self:SetUserPlaced(true);
            </OnLoad>
            <OnDragStart>
                self:StartMoving();
                self.isMoving = true;
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing();
                self.isMoving = false;
            </OnDragStop>
        </Scripts>

    </Frame>

    <Frame name="XerrPrioIcons" toplevel="true" parent="UIParent" movable="true"
           enableMouse="true">
        <Size>
            <AbsDimension x="100" y="100"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Layers>
            <Layer level="OVERLAY">

                <Texture name="$parentIcon">
                    <Size x="70" y="70"/>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="5" y="-5"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <Texture name="$parentIcon2">
                    <Size x="45" y="45"/>
                    <Anchors>
                        <Anchor point="BOTTOMLEFT">
                            <Offset>
                                <AbsDimension x="17" y="-25"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
        </Frames>
        <Scripts>
            <OnLoad>
                self:RegisterForDrag("LeftButton");
                self:SetMovable(1);
                self:SetUserPlaced(true);
            </OnLoad>
            <OnDragStart>
                self:StartMoving();
                self.isMoving = true;
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing();
                self.isMoving = false;
            </OnDragStop>
        </Scripts>

    </Frame>

</Ui>
